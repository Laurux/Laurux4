' Gambas class file

Public Sub btnClose_Click()
  
  Me.Close
  
End

Public Sub Form_Open()
  
  Dim sTemp As String
  Dim sText As String
  Dim sLib As String
  Dim aDir As String[]
  
  Me.center
  sTemp = Temp$("report")
  Try Mkdir sTemp
  sTemp &/= "report.sh"
  Try Kill sTemp
  Copy "report.sh" To sTemp
  'Shell "chmod a+x " & Shell$(sTemp) Wait
  Exec ["/bin/sh", stemp] To sText
  
  aDir = Dir("/usr/lib/", "libQtCore.so.*.*.*")
  If aDir.Count = 1 Then sLib &= "Qt4=" & aDir[0] & "\n"
  aDir = Dir("/usr/lib/", "libgtk-x11-2*.so.*.*.*")
  If aDir.Count = 1 Then sLib &= "GTK+=" & aDir[0] & "\n"
  
  If sLib Then
    sText &= "[Libraries]\n"
    sText &= sLib & "\n"
  Endif
  txtInfo.Text = sText
  
End

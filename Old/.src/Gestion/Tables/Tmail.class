Public Sub _New()
  
  Dim Frmt As New String[]
  
  Me.Center
  If Settings["/Soc" & Start.Societe & "/Coul_fen"] Then Utils.Observers(Me)
  
End

Public Sub Form_Open()
  
  Dim rResult As Result
  
  rResult = Utils.db.Exec("SELECT * FROM " & Cbase.Table("TabTmail") & "")
  If rResult.Available Then Intitule.Text = rResult!intitule
  
End

Public Sub CleanChamps()
  
  intitule.Clear
  
End

Public Sub Refresh()
  
  Intitule.Clear
  form_Open()
  
End

Public Sub Lib_KeyPress()
  
  If Key.code = Key.enter Or Key.code = Key.return Or Key.code = Key.Tab Then
    Select Case Last.tag
        
      Case 1
        Button2_Click()
        Stop Event
    End Select
  Endif
  
  If key.code = key.F1 Then
    Button4_Click()
    Stop Event
  Endif
  
End

Public Sub Btn_KeyPress()
  
  Select Case Last.tag
      
    Case 3
      Button2_Click()
      
  End Select
  
End

Public Sub Btn_Click()
  
  Select Case Last.tag
      
    Case 1
      Button4_Click()
      
    Case 3
      Button2_Click()
      
    Case 4
      Me.Close
      
  End Select
  
End

Public Sub Lib_GotFocus()
  
  Utils.SetEditColor(Me, Last)
  
End

Public Sub Button2_Click()
  
  Dim rResult As Result
  Dim collectif As String
  Dim Tab As String
  Dim sKey As String
  
  intitule.Text = Utils.ReplaceLb(intitule.Text)
  If Intitule.Text <> "" Then
    rResult = Utils.db.Exec("SELECT * FROM " & Cbase.Table("TabTmail") & " WHERE lind = &1", 1)
    If Not rResult.Available Then
      Utils.db.Exec("INSERT INTO " & Cbase.Table("TabTmail") & "(intitule) VALUES (&1)", intitule.Text)
    Else
      Utils.db.Exec("Update  " & Cbase.Table("TabTmail") & "  SET  intitule = &2 WHERE lind = &1", 1, intitule.Text)
    Endif
    Refresh()
  Endif
  
End

Public Sub Button3_Click()
  
  Me.Close()
  
End

Public Sub Button4_Click()
  
  Exec ["xdg-open", Application.Path &/ "Ecrans/TxtMail.html"]
  
End

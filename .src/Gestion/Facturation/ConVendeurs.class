' Gambas class file

$mdp As String
b As Integer

Public Sub _new()
  
  Dim Rrslt As Result
  
  Music.Load("son/warning.ogg")
  Try Rrslt = Utils.db.Exec("SELECT * FROM " & Cbase.Table("TabVendeurs"))
  If Not Error Then
    If Rrslt.Available Then
      Caissiere.Add("  ", "0")
      Do
        Try Caissiere.Add(Rrslt!code & " " & Rrslt!nom)
      Loop Until Rrslt.MoveNext()
    Endif
  Endif
Catch
  If Start.son Then
    Music.Play
  Endif
  Try message.Error(Error.Text & " " & Error.where)
  
End

Public Sub Mdp_KeyPress()
  
  If Key.code = Key.enter Or If Key.code = Key.RETURN Or If Key.code = Key.Tab Then
    Mdp_Vendeurs
    If b = 1 Then
      b = 0
    Else
      Button1.SetFocus
    Endif
  Endif
  
End

Public Sub Mdp_Vendeurs()
  
  If Mdp.Text <> $Mdp Then
    If Start.son Then
      Music.Play
    Endif
    Message.Error("Mot de passe erron√© ! Veuillez saisir votre mot de passe SVP")
    Mdp.SetFocus
    Mdp.Select
    b = 1
  Else
    b = 0
  Endif
  
End

Public Sub Caissiere_Click()
  
  Dim Rrslt As Result
  
  If Not IsNull(Caissiere.Text) Then
    Rrslt = Utils.db.Exec("SELECT * FROM " & Cbase.Table("TabVendeurs") & " where code = &1 ", Left$(Caissiere.Text, 1))
    $mdp = hexdblKey.crypt("de", Rrslt!mdp, "Laurux")
    If B = 1 Then
      Caissiere.SetFocus
    Else
      Mdp.SetFocus
      Mdp.Select
    Endif
  Endif
Catch
  If Start.son Then
    Music.Play
  Endif
  Try message.Error(Error.Text & " " & Error.where)
  
End

Public Sub Button2_Click()
  
  Me.close
  
End

Public Sub Button1_Click()
  
  If caissiere.Text = "  " Then
    If Start.son Then
      Music.Play
    Endif
    Message.Error("Veuillez saisir votre code vendeur SVP")
  Else
    If IsNull(Mdp.text) Then
      If Start.son Then
        Music.Play
      Endif
      Message.Error("Veuillez saisir votre mot de passe SVP")
      Mdp.SetFocus
    Else
      Mdp_Vendeurs()
      If b = 1 Then
        Mdp.SetFocus
        Mdp.Select
        b = 0
      Else
        Settings["/Soc" & start.Societe & "/CodeVendeur"] = caissiere.Text
        ConVendeurs.Visible = False
        Facture.ShowModal()
      Endif
    Endif
  Endif
  
End

Public Sub Button3_Click()
  
  Settings["/Soc" & start.Societe & "/CodeVendeur"] = ""
  ConVendeurs.Visible = False
  
End

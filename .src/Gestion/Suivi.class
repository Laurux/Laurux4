End

Public Sub Calc_MargeArt2()
  
  MargeArt2.Text = Format$(Val(Utils.cpoint(Vtes2.text)) - Val(Utils.cpoint(Ach2.Text)), "0.00")
  Utils.Coulfonds(MargeArt2)

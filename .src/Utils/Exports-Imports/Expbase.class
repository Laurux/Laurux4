son As Integer = Start.Son

Public Sub _New()
  
  If Settings["/Soc" & Start.Societe & "/Coul_fen"] Then Utils.Observers(Me)
  
  Music.Load(Start.Musique)
  Try Adrbase.Text = Settings["/Soc" & Start.Societe & "/Adr-base"]
  Me.Center
  
End

Public Sub button2_Click()
  
  Dim Fle1 As String
  Dim stext As String = "Envoi de la sauvegarde du " & Format$(Now, "dd.mm.yyyy")
  Dim stext2 As String = "Veuillez trouver ci-joint la base Laurux de la société " & Settings["/intitule"]
  Dim cs As String = Settings["/Soc"]
  
  If Settings["/Compression"] = "-1" Then
    Try Fle1 = Settings["/Rep_Sauv"] & "/Laurux" & cs & ".sql.gz"
  Else
    Try Fle1 = Settings["/Rep_Sauv"] & "/Laurux" & cs & ".sql"
  Endif
  If Not Error Then
    If Not IsNull(Adrbase.Text) Then
      'Exec ["xdg-email", "--attach", Fle1, "--subject", sText, "--body", sText2, Adrbase.Text]
      EnvMail.Envoi2(Adrbase.Text, stext, sText2, Fle1)
    Else
      If son Then
        Music.Play
      Endif
      message.Error("Veuillez renseigner l'adresse d'envoi SVP !")
    Endif
  Else
    If son Then
      Music.Play
    Endif
    message.Error("La base n'existe pas !")
  Endif
Catch
  If son Then
    Music.Play
  Endif
  message.Error("Le fichier n'a pas pu être envoyé. vérifiez vos préférences et/ou l'adresse d'envoi SVP !")
  
End


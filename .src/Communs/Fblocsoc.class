' Gambas class file

Public Sub Form_Open()
  
  Try Checkbox1.value = Settings["/Soc" & Start.Societe & "/Blocsoc"]
  
End

Public Sub Button1_Click()
  
  If IsNull(TextBox1.Text) And If Checkbox1.value Then
    Message.Warning("Attention ! L'accès à la table des sociétés est bloqué\n mais vous n'avez pas saisit de mot de passe.")
    Return
  Endif
  Me.Close
  
End

Public Sub Form_Close()
  
  If IsNull(TextBox1.Text) And If Checkbox1.value Then
    Message.Warning("Attention ! L'accès à la table des sociétés est bloqué\n mais vous n'avez pas saisit de mot de passe.")
  Endif
  Settings["/Soc" & Start.Societe & "/Blocsoc"] = Checkbox1.Value
  Settings["/Soc" & Start.Societe & "/BlocsocMdp"] = hexdblKey.crypt("en", TextBox1.Text, "Laurux")
  Settings.Save
  
End

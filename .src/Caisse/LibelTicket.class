Public Sub _New()
  
  Music.Load(Start.Musique)
  Me.Center
  
End

Public Sub Form_Open()
  
  Dim rResult As Result
  
  rResult = Utils.db.Exec("SELECT * FROM " & Cbase.Table("TabLibelTicket") & "")
  If rResult.Available Then Txtbfac.Text = rResult!libeltk
  
End

Public Sub Btn_Click()
  
  Select Case Last.tag
      
    Case 1
      'Button1_Click()
      
    Case 2
      Button2_Click()
      
    Case 3
      
      Me.Close
      
  End Select
  
End

Public Sub Button2_Click()
  
  Dim rResult As Result
  
  Txtbfac.Text = Utils.ReplaceLb(Txtbfac.Text)
  If Txtbfac.Text <> "" Then
    rResult = Utils.db.Exec("SELECT * FROM " & Cbase.Table("TabLibelTicket") & "")
    If Not rResult.Available Then
      Utils.db.Exec("INSERT INTO " & Cbase.Table("TabLibelTicket") & "(libeltk) VALUES ( &1)", Txtbfac.Text)
    Else
      Utils.db.Exec("UPdate  " & Cbase.Table("TabLibelTicket") & "  SET  libeltk= &1", TxtbFac.Text)
    Endif
  Endif
  
End

